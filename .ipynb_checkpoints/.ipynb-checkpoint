   "source": [
    "def ent_ls(text):\n",
    "    ents = []\n",
    "    doc = nlp(text)\n",
    "    for ent in doc.ents:\n",
    "        if ent.label_ in [\"PERSON\", \"GPE\"]:\n",
    "            ents += [(ent.text, ent.label_)]\n",
    "    return ents         "
   ]
